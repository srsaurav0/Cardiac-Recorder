<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddMeasurementActivity"
    android:background="@drawable/common_bg"
    android:orientation="vertical">

  <TextView
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="20dp"
      android:layout_marginRight="30dp"
      android:background="@drawable/rounded_corner"
      android:fontFamily="@font/acme_regular"
      android:gravity="center"
      android:text="Measurement Details"
      android:textAlignment="center"
      android:textColor="@color/white"
      android:textSize="30sp"
      />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginLeft="30dp"
      android:layout_marginTop="20dp"
      android:layout_marginRight="30dp"
      android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_scrollbg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp">

      <TextView
          android:id="@+id/dateDetailsTextId"
          android:layout_width="match_parent"
          android:fontFamily="@font/acme_regular"
          android:text="@string/date_st"
          android:textColor="@color/black"
          android:layout_height="80dp"
          android:padding="5dp"
          android:background="@drawable/rounded_corner_whitebg"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/timeDetailsTextId"
          android:layout_width="match_parent"
          android:layout_marginTop="20dp"
          android:layout_height="80dp"
          android:padding="5dp"
          android:background="@drawable/rounded_corner_whitebg"
          android:fontFamily="@font/acme_regular"
          android:text="@string/time_st"
          android:textColor="@color/black"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/sysDetailsTextId"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:padding="5dp"
          android:background="@drawable/rounded_corner_whitebg"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/acme_regular"
          android:text="@string/sys_st"
          android:textColor="@color/black"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/diasDetailsTextId"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:layout_marginTop="20dp"
          android:background="@drawable/rounded_corner_whitebg"
          android:fontFamily="@font/acme_regular"
          android:padding="5dp"
          android:text="@string/dias_st"
          android:textColor="@color/black"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/hrtDetailsTextId"
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:padding="5dp"
          android:background="@drawable/rounded_corner_whitebg"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/acme_regular"
          android:text="@string/hrt_st"
          android:textColor="@color/black"
          android:textSize="22sp" />

      <TextView
          android:id="@+id/cmntDetailsTextId"
          android:layout_width="match_parent"
          android:layout_height="120dp"
          android:padding="5dp"
          android:background="@drawable/rounded_corner_whitebg"
          android:layout_marginTop="20dp"
          android:fontFamily="@font/acme_regular"
          android:text="@string/cmnt_st"
          android:textColor="@color/black"
          android:textSize="22sp" />

      <Button
          android:id="@+id/updateActivityButtonId"
          android:layout_marginTop="20dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="40dp"
          android:layout_marginRight="40dp"
          android:layout_marginBottom="20dp"
          android:fontFamily="@font/acme_regular"
          android:text="Tap to Update" />

    </LinearLayout>
  </ScrollView>

</LinearLayout>